function reserves_access($op, $account = NULL) {

  if (empty($account)) {
    $account = $GLOBALS['user'];
  }

  if ($op == 'view') {
    if (user_access('view bookings', $account) || user_access('view own bookings', $account)) {
      return TRUE;
    }
  }
  if ($op == 'view_own') {
    if (user_access('view own bookings', $account)) {
      return TRUE;
    }
  }
}

